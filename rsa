#!/usr/bin/python3
"""
Factorize numbers in a file into a product of two prime numbers
"""
import sys


def factorize(num):
    """
    Factorize the given number into two prime numbers (format n = p*q)
    """
    for i in range(2, num + 1):
        if num % i == 0 and is_prime(i):
            factor_1 = i
            factor_2 = num // i
            return factor_1, factor_2


def is_prime(num):
    """
    Check if a number is prime
    """
    if num < 2:
        return False
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return False
    return True


def main():
    """
    Main function to read numbers from a file and factorize each one
    """
    try:
        file = sys.argv[1]
        with open(file) as f:
            for line_number in f:
                try:
                    line_number = int(line_number)
                    factors = factorize(line_number)
                    if factors:
                        factor_1, factor_2 = factors
                        print("{}={}*{}".format(line_number, factor_2, factor_1))
                except ValueError:
                    pass
    except (IndexError, FileNotFoundError):
        pass


if __name__ == "__main__":
    main()

