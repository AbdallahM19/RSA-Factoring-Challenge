#!/usr/bin/env python3
""" RSA Factoring Challenge """
from sys import argv
from math import sqrt

def open_read_file(file_name):
    """read from file
    add to array
    """
    with open(file_name, "r", encoding="utf-8") as file:
        lines = file.readlines()
    number_to_factor = []
    for line in lines:
        number_to_factor.append(int(line))
    return number_to_factor

def find_and_times(n):
    """factor each
    n given
    """
    for i in range(1, n):
        if n == ((n // i) * i):
            print("{}={}*{}".format(n, (n // i), i))
            break

def prime_factorize(n):
    """ Prime factorization of n """
    factors = []
    
    while n % 2 == 0:
        factors.append(2)
        n //= 2

    for i in range(3, int(sqrt(n)) + 1, 2):
        while n % i == 0:
            factors.append(i)
            n //= i

    if n > 2:
        factors.append(n)

    return factors

def fac_list(ls):
    """factor each
    num in ls
    """
    for i in ls:
        prime_factors = prime_factorize(i)
        p, q = prime_factors[1], prime_factors[0]
        print(f"{i}={p}*{q}")

if len(argv) == 2:
    fac_list(open_read_file(argv[1]))
