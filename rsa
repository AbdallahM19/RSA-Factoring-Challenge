#!/usr/bin/python3
"""
Factorize numbers in a file into a product of two prime numbers
"""
import sys


def is_prime(num):
    if num < 2:
        return False
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return False
    return True


def factorize():
    """
    A function to factorize the given set of numbers into two prime numbers (format n = p*q)
    """
    try:
        file = sys.argv[1]
        with open(file) as f:
            for line_number in f:
                line_number = int(line_number)
                for i in range(2, line_number + 1):
                    if line_number % i == 0 and is_prime(i):
                        factor_1 = i
                        factor_2 = line_number // i
                        print("{}={}*{}".format(line_number, factor_2, factor_1))
                        break
    except (IndexError, ValueError):
        pass


factorize()

